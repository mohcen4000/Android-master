<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    >




    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#1858DD"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp">

        <ImageView
            android:id="@+id/navigation"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_menu_copy"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/ubuntu_bold"
            android:includeFontPadding="false"
            android:text="Progress"
            android:textColor="@color/colorTextIcons"
            android:textSize="@dimen/_16ssp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_white"
            tools:context=".MainActivity">


            <TextView
                android:id="@+id/myprog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="My Progress"
                android:textSize="14sp"

                />

            <com.uc2.dzprostatecare.AAChartCoreLib.AAChartCreator.AAChartView
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="35dp" />

        </RelativeLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_white"
            >


            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_progress_items"
                android:gravity="center"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_glucose" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Glucose"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/glucose_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not yet added"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                >
                <LinearLayout
                    android:id="@+id/glucose_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_progress_items"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_gravity="center|right"
                    >

                    <ImageView
                        android:id="@+id/plus_glucose"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_plus"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_white"
            >


            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_progress_items"
                android:gravity="center"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:id="@+id/ic2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_heart" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pressure"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/pressure_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not yet added"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                >
                <LinearLayout
                    android:id="@+id/pressure_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_progress_items"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_gravity="center|right"
                    >

                    <ImageView
                        android:id="@+id/plus_pressure"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_plus"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_white"
            >


            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_progress_items"
                android:gravity="center"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:id="@+id/ic3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_graphic" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pulse"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/pulse_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not yet added"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                >
                <LinearLayout
                    android:id="@+id/pulse_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_progress_items"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_gravity="center|right"
                    >

                    <ImageView
                        android:id="@+id/pluse_pulse"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_plus"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_white"
            >


            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_progress_items"
                android:gravity="center"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:id="@+id/ic4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_thermometer" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/temp_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not yet added"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                >
                <LinearLayout
                    android:id="@+id/temp_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_progress_items"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_gravity="center|right"
                    >

                    <ImageView
                        android:id="@+id/plus_temp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_plus"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_white"
            >


            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_progress_items"
                android:gravity="center"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:id="@+id/plus_te"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_glucose" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PSA"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/value_psa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not yet added"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                >
                <LinearLayout
                    android:id="@+id/psa_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_progress_items"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_gravity="center|right"
                    >

                    <ImageView
                        android:id="@+id/plus_psa"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_plus"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>